@page "/admin/products"
@using TechGadgetStore.Models
@using TechGadgetStore.Interfaces
@inject IProductRepository ProductRepository
@inject ICategoryRepository CategoryRepository
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Manage Products - Admin</PageTitle>

<div class="main-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Manage Products</h2>
        <button class="btn btn-success btn-lg" @onclick="ShowAddModal">
            Add New Product
        </button>
    </div>

    @if (products == null)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!products.Any())
    {
        <div class="alert alert-info text-center">
            <h4>No products found</h4>
            <p>Add your first product to get started!</p>
        </div>
    }
    else
    {
        <table class="table table-hover admin-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in products)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>
                            <img src="@product.ImageUrl" alt="@product.Name" style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;">
                        </td>
                        <td><strong>@product.Name</strong></td>
                        <td class="price-tag">$@product.Price</td>
                        <td>
                            @if (product.StockQuantity > 0)
                            {
                                <span class="stock-badge in-stock">@product.StockQuantity</span>
                            }
                            else
                            {
                                <span class="stock-badge out-of-stock">Out of Stock</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-secondary">@product.Category?.Name</span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-primary me-2" @onclick="() => ShowEditModal(product)">Edit</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteProduct(product.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@if (showModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditMode ? "Edit Product" : "Add New Product")</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="currentProduct" OnValidSubmit="SaveProduct">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Product Name</label>
                                <InputText @bind-Value="currentProduct.Name" class="form-control" placeholder="Enter product name" />
                                <ValidationMessage For="@(() => currentProduct.Name)" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Category</label>
                                <InputSelect @bind-Value="currentProduct.CategoryId" class="form-control">
                                    <option value="0">Select Category</option>
                                    @foreach (var category in categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => currentProduct.CategoryId)" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea @bind-Value="currentProduct.Description" class="form-control" rows="3" placeholder="Enter product description" />
                            <ValidationMessage For="@(() => currentProduct.Description)" />
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Price ($)</label>
                                <InputNumber @bind-Value="currentProduct.Price" class="form-control" placeholder="0.00" />
                                <ValidationMessage For="@(() => currentProduct.Price)" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Discount Price ($)</label>
                                <InputNumber @bind-Value="currentProduct.DiscountPrice" class="form-control" placeholder="Optional" />
                                <ValidationMessage For="@(() => currentProduct.DiscountPrice)" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Stock Quantity</label>
                                <InputNumber @bind-Value="currentProduct.StockQuantity" class="form-control" placeholder="0" />
                                <ValidationMessage For="@(() => currentProduct.StockQuantity)" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Image URL</label>
                            <InputText @bind-Value="currentProduct.ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                            <ValidationMessage For="@(() => currentProduct.ImageUrl)" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save Product</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Product> products = new();
    private List<Category> categories = new();
    private Product currentProduct = new();
    private bool showModal = false;
    private bool isEditMode = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        var productsData = await ProductRepository.GetProductsWithCategoriesAsync();
        products = productsData.ToList();
        
        var categoriesData = await CategoryRepository.GetAllAsync();
        categories = categoriesData.ToList();
    }

    private void ShowAddModal()
    {
        currentProduct = new Product();
        isEditMode = false;
        showModal = true;
    }

    private void ShowEditModal(Product product)
    {
        currentProduct = new Product
        {
            Id = product.Id,
            Name = product.Name,
            Description = product.Description,
            Price = product.Price,
            DiscountPrice = product.DiscountPrice,
            StockQuantity = product.StockQuantity,
            CategoryId = product.CategoryId,
            ImageUrl = product.ImageUrl
        };
        isEditMode = true;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        currentProduct = new Product();
    }

    private async Task SaveProduct()
    {
        if (isEditMode)
        {
            var existingProduct = await ProductRepository.GetByIdAsync(currentProduct.Id);
            if (existingProduct != null)
            {
                existingProduct.Name = currentProduct.Name;
                existingProduct.Description = currentProduct.Description;
                existingProduct.Price = currentProduct.Price;
                existingProduct.DiscountPrice = currentProduct.DiscountPrice;
                existingProduct.StockQuantity = currentProduct.StockQuantity;
                existingProduct.CategoryId = currentProduct.CategoryId;
                existingProduct.ImageUrl = currentProduct.ImageUrl;
                
                await ProductRepository.UpdateAsync(existingProduct);
            }
        }
        else
        {
            await ProductRepository.AddAsync(currentProduct);
        }

        await LoadData();
        CloseModal();
    }

    private async Task DeleteProduct(int id)
    {
        await ProductRepository.DeleteAsync(id);
        await LoadData();
    }
}
